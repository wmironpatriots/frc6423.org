---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
import RobotImg from '../assets/HVR-1.png';
import Base from '../layouts/Base.astro';
import HomeFooter from '../components/HomeFooter.astro';
import NavigationBar from '../components/NavigationBar.astro';
---

<Base>
	<div class="home-page-collection">
		<div class="home-page__gallery"> <!-- make into interactive island - gallery image -->
			<img src={RobotImg.src} alt="Robot"/>
		</div>

		<div class="home-page__content">
			<img class="logo" width="90" height="90" src={logo.src} alt="Logo"/>
			<div>
				<header>
					<div class="home-page__content__header">
						<div class="title-header">
							<h2>THE WARD MELVILLE</h2>
							<h1>IRON PATRIOTS</h1>
						</div>
						<h3>Design. Build. Compete. Inspire.</h3>
					</div>
				</header>
        <NavigationBar current = "home" isHome = {true} />
			</div>

			<footer>
				<div class="home-page__content__footer">
					<HomeFooter />
				</div>
			</footer>
		</div>
	</div>
</Base>

<style>
	.home-page-collection {
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap;
		height: 100%;
	}

	/*
	* 
	* Splits home screen page into 50-50 and wraps
	*
	*/
	.home-page-collection > * { 
		flex-grow: 1;
		flex-basis: 50%;
	}

	/*
	*
	* Content
	*
	*/
	.home-page__content {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.home-page__content .logo {
		padding-left: 7%;
		padding-top: 5%;
	}

	/*
	*
	* Header for Homepage
	*
	*/

	.home-page__content__header {
		display: flex;
		justify-content: center;
		flex-direction: column;
		padding-left: 7%;
	}

	.title-header h2 {
		font-size: 200%;
		margin-bottom: 0;
		margin-top: 0;
		padding: 0;
		font-weight: normal;
	}

	.title-header h1 {
		font-size: 500%;
		font-weight: bolder;
		margin-top: 0;
		margin-bottom: 0;
		padding: 0;
	}

	h3 {
		margin-top: 0;
	}

	/*
	*
	* Footer Bar for Homepage
	*
	*/

	.home-page__content__footer {
		display: flex;
		padding-left: 7%;
		padding-bottom: 7%;
	}

	/*
	*
	* Gallery (using a single image for substitute right now)
	*
	*/
	.home-page__gallery {
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.home-page__gallery img {
		object-fit: cover;
		width: 100%;
		height: 100%;
	}
</style>
